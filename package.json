{
  "name": "@frugalwizard/abi2ts",
  "version": "0.8.1",
  "description": "This is a code generator that takes the JSON produced by the solidity compiler and creates typescript code for interacting with the corresponding smart contracts",
  "license": "MIT",
  "author": "Frugal-Wizard",
  "main": "dist/abi2ts.js",
  "repository": "https://github.com/Frugal-Wizard/abi2ts.git",
  "bin": {
    "abi2ts": "./dist/cli.js"
  },
  "scripts": {
    "clean": "del dist",
    "compile": "tsc -p src",
    "chmod": "shx chmod +x dist/cli.js",
    "build": "run-s clean compile chmod",
    "test:clean": "del test/artifacts test/contracts-ts",
    "test:solc": "wsolc --optimize --output-dir test/artifacts test/contracts",
    "test:abi2ts": "ts-node src/cli --output-dir test/contracts-ts test/artifacts",
    "test:mocha": "mocha",
    "prepare": "npm run build",
    "test": "run-s test:clean test:solc test:abi2ts test:mocha",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "glob": "^8.1.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@frugalwizard/abi2ts-lib": "^0.8.0",
    "@frugalwizard/solidity-compiler-wrapper": "^1.2.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/mochawesome": "^6.2.1",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.33.0",
    "ganache": "^7.7.4",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "solc": "0.8.17",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
